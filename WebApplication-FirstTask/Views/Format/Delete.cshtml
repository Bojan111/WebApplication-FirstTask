@model WebApplication_FirstTask.Models.TaskFormat
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete!</h2>
<div class="alert alert-danger">
    Are you sure you want to delete @Model.Color @Model.Number @Model.Label?
</div>
<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes!</button>
    <a asp-controller="Format" asp-action="ShowFormatData" class="btn btn-outline-primary">Cancel</a>
</form>