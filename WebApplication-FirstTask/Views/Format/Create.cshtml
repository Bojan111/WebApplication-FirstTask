@{
    ViewData["Title"] = "Create";
}

<div class="ml-0 row container mb-5">
    <form class="col-xs-12" method="post" asp-action="Create" enctype="multipart/form-data">

        <div class="row">
            <div class="col col-6">
                <div class="form-group">
                    <input type="file" class="form-control" name="fileName" />
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary col-xs-12">Upload</button>
                </div>
            </div>
        </div>
        

       
    </form>
</div>